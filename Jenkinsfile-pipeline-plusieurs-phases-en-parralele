pipeline {
  agent any
  stages {
    stage('Version de ant') {
      steps {
        sh '/usr/bin/ant -version'
      }
    }
    stage('Nettoyage') {
      steps {
        sh '/usr/bin/ant clean'
      }
    }
    stage('Initialisation') {
      steps {
        sh '/usr/bin/ant init'
      }
    }
    stage('Analyse statique et compilation en parall√®le') {
      parallel {
        stage('Analyse Statique du Code') {
          steps {
            sh '/usr/bin/ant checkstyle'
            recordIssues(
              enabledForFailure: true, aggregatingResults: true,
              tools: [java(), checkStyle(pattern: 'reports/checkstyle_*.xml', reportEncoding: 'UTF-8')]
            )
          }
        }
        stage('Compilation') {
          steps {
            sh '/usr/bin/ant compile'
          }
        }
      }
    }
    stage('Tests Unitaires') {
      steps {
        sh '/usr/bin/ant junit'
        junit 'reports/TEST-tests*.xml'
      }
    }
  }
}